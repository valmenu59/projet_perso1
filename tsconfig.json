{
  "compilerOptions": {
    //"module": "commonjs",
    "target": "es2022",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}